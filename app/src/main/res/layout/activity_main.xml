<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#2EA2EF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="197dp" />

    <LinearLayout
        android:id="@+id/loginOptions"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="login"
            android:text="Login" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="register"
            android:text="Register" />

        <Button
            android:id="@+id/btnForgotPwd"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="forgotPwd"
            android:text="Forgot Pwd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userOptions"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvUserMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnSrtQuiz"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="srtQuiz"
            android:text="Start Quiz" />

        <Button
            android:id="@+id/btnNewQuiz"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="crtQuiz"
            android:text="Create Quiz" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="logOut"
            android:text="Log Out" />
    </LinearLayout>

</LinearLayout>